@model HotalMangment.Bussiness.HotelMV.RoomMV

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm("CreateRoom", "Room"))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>RoomMV</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
     

        <div class="form-group">
            @Html.LabelFor(model => model.TypeRoom, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EnumDropDownListFor(m => m.TypeRoom, "Select a license", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TypeRoom, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.noOFbed, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.noOFbed, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                @Html.ValidationMessageFor(model => model.noOFbed, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
<script>
    $("#TypeRoom").change(function () {
        if ($("#TypeRoom").val() == 1) {
            $("#noOFbed").removeAttr('disabled');
        }
    else{
            $("#noOFbed").attr('disabled', 'disabled');
        }
        
    });
    </script>
    
}
